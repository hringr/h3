<ul class="list-group" style="max-width: 560px;">
    <div id="commentList"></div>
    <li class="list-group-item">
        <div class="form-horizontal">
            <label class="sr-only" for="CommentText">Comment</label>
            <textarea class="form-control" rows="3" id="CommentText" name="CommentText"></textarea>
            <button type="submit" id="submit" onclick="AddComment()" class="btn btn-primary">Send</button>
        </div>
    </li>
</ul>

<script id="template" type="text/html">
    <li class="comment, list-group-item">
        <p>
            <span class="glyphicon glyphicon-user"></span>
            <span data-content="Username" class="text-primary"></span>
            <span data-content="CommentText"></span>
        </p>
        <p>
            <span data-content="CommentDate" class="text-muted"> - </span>
            <a class="like-comment" data-template-bind='{"attribute": "id", "value": "ID"}' onclick='AddLike(id); return false' href="#">Like<span class="glyphicon glyphicon-thumbs-up"></span></a>

            @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
            {
                <button type="submit" id="delete">Delete</button>
            }
        </p>
        <ul data-template-bind='{"attribute": "class", "value": "ID"}' style="list-style:none"></ul>
</script>

<script id="templateForLikes" type="text/html">
    <li>
        <span data-content="Username"></span>
        <span> Likes it alot! </span>
    </li>
</script>
