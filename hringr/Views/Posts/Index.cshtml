@model IEnumerable<hringr.Models.Post>

    @{
        ViewBag.Title = "Index";
    }

<h2>Posts</h2>
<span class="pull-right">
    <a href="../"> <img src="../../images/bird2.png" width="60" height="60" class="pull-left" /></a>
</span>
    <div>
        <p>
            @Html.ActionLink("Create a new post", "Create")
        </p>
        @foreach (var item in Model)
        {
            <div class="well">
                <h3>
                    @Html.ActionLink(item.title, "Details", new { id = item.ID }) <small class="pull-right">@Html.DisplayFor(modelItem => item.date) </small>
                </h3>
                <p>
                    @Html.DisplayFor(modelItem => item.text)
                </p>
                <p>
                    <a class="like-comment pull-right btn btn-primary btn-xs" data-template-bind='{"attribute": "id", "value": "postingID"}' onclick='AddDislike(@item.ID); return false;' href="#">
                    <span class="glyphicon glyphicon-thumbs-down"> </span> Dislike</a>

                    <a class="like-comment pull-right btn btn-primary btn-xs space" data-template-bind='{"attribute": "id", "value": "postingID"}' onclick='AddLike(@item.ID); return false;' href="#">
                    <span class="glyphicon glyphicon-thumbs-up"></span> Like</a>


                    @Html.ActionLink("Comment", "Create","Comments", new { id = item.ID }, null) |
                    @Html.ActionLink("Edit", "Edit", new {id = item.ID}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.ID})
                </p>
            </div>
        }
    </div>
