@model IEnumerable<hringr.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>
<span class="pull-right">
    <a href="../"> <img src="../../images/bird2.png" width="60" height="60" class="pull-left" /></a>
</span>
<p>
    @Html.ActionLink("Create a new category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Category name:</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
    </tr>
}

</table>
